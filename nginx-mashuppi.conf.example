# Nginx configuration for mashuppi
# Copy to /etc/nginx/sites-enabled/mashuppi on the Pi
# sudo cp nginx-mashuppi.conf /etc/nginx/sites-enabled/mashuppi
# sudo nginx -t && sudo systemctl reload nginx

# HTTP redirect to HTTPS
server {
    listen 80;
    server_name mashuppi.com www.mashuppi.com mashuppi.live www.mashuppi.live;
    return 301 https://$host$request_uri;
}

# HTTPS for mashuppi.com
server {
    listen 443 ssl http2;
    server_name mashuppi.com www.mashuppi.com;
    
    ssl_certificate /etc/letsencrypt/live/mashuppi.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/mashuppi.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    
    ssl_session_cache shared:SSL:10m;
    ssl_buffer_size 4k;
    
    # API proxy
    location /api/ {
        proxy_pass http://localhost:3000/api/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
    
    # WebSocket proxy
    location /ws {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }
    
    # Icecast stream proxy
    location /stream {
        proxy_pass http://localhost:8000/mashups;
        proxy_buffering off;
        proxy_set_header Host $host;
    }
    
    # React frontend
    location / {
        root /var/www/mashuppi;
        try_files $uri $uri/ /index.html;
    }

    # Album art caching proxy
    location /album-art {
        proxy_pass http://localhost:3000/album-art;
        proxy_cache_valid 200 7d;
        proxy_set_header Host $host;
    }

    # Serve music files directly for album playback
    location /music/ {
        alias /home/derekdepriest/music/mashups/;

        # Set correct MIME type for MP3 files
        types {
            audio/mpeg mp3;
        }
        default_type audio/mpeg;

        # CORS headers to prevent ORB blocking
        add_header Access-Control-Allow-Origin "*";
        add_header Access-Control-Allow-Methods "GET, HEAD, OPTIONS";
        add_header Access-Control-Allow-Headers "Range";

        # Enable range requests for seeking
        add_header Accept-Ranges bytes;

        # Long cache since files don't change
        add_header Cache-Control "public, max-age=31536000, immutable";

        # Handle preflight requests
        if ($request_method = 'OPTIONS') {
            add_header Access-Control-Allow-Origin "*";
            add_header Access-Control-Allow-Methods "GET, HEAD, OPTIONS";
            add_header Access-Control-Allow-Headers "Range";
            add_header Content-Length 0;
            add_header Content-Type text/plain;
            return 204;
        }
    }

}

